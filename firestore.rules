rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // ========== myeverylink collections ==========
    // Users collection - for profiles and username checking
    match /users/{userId} {
      // Allow anyone to read profiles (needed for username availability and public profiles)
      allow read: if true;
      // Allow authenticated users to create/update their own profile
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Links collection - for user's links
    match /links/{linkId} {
      // Allow public read access for public profiles
      allow read: if true;
      // Allow authenticated users to create links with their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow authenticated users to update/delete their own links
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Clicks collection - for analytics
    match /clicks/{clickId} {
      allow read, write: if true;
    }

    // ========== OurCart collections ==========
    // Lists collection rules
    match /lists/{listId} {
      // Allow read if authenticated (collaborator check done in app)
      allow read: if isAuthenticated();
      
      // Allow create if authenticated and setting themselves as owner
      allow create: if isAuthenticated() && 
        request.resource.data.ownerId == request.auth.uid;
      
      // Allow update if authenticated (app handles permission check)
      allow update: if isAuthenticated();
      
      // Allow delete only if owner
      allow delete: if isAuthenticated() && 
        resource.data.ownerId == request.auth.uid;
      
      // Items subcollection rules
      match /items/{itemId} {
        // Allow all operations if authenticated
        allow read, write: if isAuthenticated();
      }
    }
    
    // Invites collection rules
    match /invites/{inviteId} {
      // Allow all operations if authenticated
      allow read, write: if isAuthenticated();
    }

    // ========== PrepBuddy collections ==========
    // User tracking - personal problem progress
    match /userTracking/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Leaderboard - public read, owner write
    match /leaderboard/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}